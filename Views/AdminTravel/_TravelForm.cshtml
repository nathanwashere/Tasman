@model Tasman.Models.Travel

<div class="form-grid">
    <div class="form-group">
        <label asp-for="Destination"></label>
        <input asp-for="Destination" class="form-control" />
        <span asp-validation-for="Destination" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="Country"></label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" class="form-control" />
        <span asp-validation-for="Price" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiscountPrice">Discount Price</label>
        <input asp-for="DiscountPrice" type="number" class="form-control" />
        <span asp-validation-for="DiscountPrice" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiscountEndsAt">Discount Ends (date)</label>
        <input asp-for="DiscountEndsAt" type="date" class="form-control" />
        <span asp-validation-for="DiscountEndsAt" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="AvailableRooms"></label>
        <input asp-for="AvailableRooms" type="number" class="form-control" />
        <span asp-validation-for="AvailableRooms" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="PackageType"></label>
        <input asp-for="PackageType" class="form-control" />
        <span asp-validation-for="PackageType" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="AgeLimitation"></label>
        <input asp-for="AgeLimitation" class="form-control" />
        <span asp-validation-for="AgeLimitation" class="text-danger small"></span>
    </div>
    <div class="form-group full">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="GalleryImage1Url">Gallery Image 1</label>
        <input asp-for="GalleryImage1Url" class="form-control" />
        <span asp-validation-for="GalleryImage1Url" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="GalleryImage2Url">Gallery Image 2</label>
        <input asp-for="GalleryImage2Url" class="form-control" />
        <span asp-validation-for="GalleryImage2Url" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="GalleryImage3Url">Gallery Image 3</label>
        <input asp-for="GalleryImage3Url" class="form-control" />
        <span asp-validation-for="GalleryImage3Url" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="DisplayOrder">Display Order</label>
        <input asp-for="DisplayOrder" type="number" class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookableDaysBeforeStart">Bookable Days Before Start</label>
        <input asp-for="BookableDaysBeforeStart" type="number" class="form-control" />
        <span asp-validation-for="BookableDaysBeforeStart" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="CancellableDaysBeforeStart">Cancellable Days Before Start</label>
        <input asp-for="CancellableDaysBeforeStart" type="number" class="form-control" />
        <span asp-validation-for="CancellableDaysBeforeStart" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label class="form-check">
            <input asp-for="IsVisible" class="form-check-input" />
            <span class="form-check-label">Visible</span>
        </label>
    </div>
    <div class="form-group">
        <label class="form-check">
            <input asp-for="IsRecommended" class="form-check-input" />
            <span class="form-check-label">Recommended</span>
        </label>
    </div>
</div>
