@model Tasman.Models.Travel
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Add Destination";
}

<div class="admin-header">
    <div>
        <h1>New Destination</h1>
        <p>Use the template fields to add a fresh travel experience.</p>
    </div>
    <a href="/AdminTravel" class="pill">Back to list</a>
</div>

<div class="admin-form-card">
    <form asp-action="Create" method="post">
        <div class="admin-form-grid">
            <h3>Core Details</h3>
            @Html.Partial("_TravelForm", Model)
        </div>
        <div class="form-actions">
            <button type="submit" class="pill primary">Create</button>
            <a href="/AdminTravel" class="pill">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
