@model Tasman.ViewModels.BookingRequestViewModel
@{
    Layout = "~/Views/Shared/TravelLayout.cshtml";
    var travel = ViewBag.Travel as Tasman.Models.Travel;
}

<link rel="stylesheet" href="~/css/travel.css" />

<div class="main">
    <div class="page-container">
        <h1 class="main-heading">Book @travel?.Destination</h1>
        <p class="sub-heading">Secure your spot with just a couple of clicks.</p>

        <div class="travel-card" style="max-width:720px;margin:0 auto;">
            <div class="travel-image-wrapper">
                <div class="travel-image" style="background-image:url('@travel?.ImageUrl');height:260px;"></div>
                <span class="travel-PackageType">@travel?.PackageType</span>
            </div>
            <div class="card-content">
                <p class="travel-country">@travel?.Country</p>
                <p class="travel-title">@travel?.Destination</p>
                <p class="travel-price">â‚ª@travel?.Price</p>
                <p>Available rooms: @travel?.AvailableRooms</p>
            </div>
        </div>

        <form asp-action="Book" method="post" class="auth-form" style="max-width:720px;margin:24px auto;background:#fff;padding:24px;border-radius:12px;box-shadow:0 14px 40px rgba(0,0,0,0.08);">
            <input type="hidden" asp-for="TravelId" />
            <div class="form-group" style="margin-bottom:16px;">
                <label asp-for="Rooms" class="form-label">Rooms to book</label>
                <input asp-for="Rooms" class="form-control" min="1" style="padding:10px;border:1px solid #d0d0d0;border-radius:8px;" />
                <span asp-validation-for="Rooms" class="text-danger small"></span>
            </div>
            <div class="form-group" style="margin-bottom:16px;">
                <label asp-for="Notes" class="form-label">Notes (optional)</label>
                <textarea asp-for="Notes" class="form-control" rows="3" style="padding:10px;border:1px solid #d0d0d0;border-radius:8px;"></textarea>
            </div>

            <button type="submit" class="book-now-btn" style="width:100%;text-align:center;">Confirm Booking</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
